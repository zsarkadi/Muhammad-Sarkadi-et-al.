tbl_gene_IDs_names <- read_tsv("gene_IDs_names.tsv", skip = 1, col_names = TRUE) # gene names downloaded from pombase on 2023_08_15

###########################################################


physical_complexes_tbl <- read_csv("data/Physical_complexes_20230817.csv",
                                   col_types = cols(
                                     gene = col_character(),
                                     main_chromatin_complexes = col_character(),
                                     in_deletion_library = col_character(),
                                     physical_interactions = col_character(),
                                     modules = col_character()
                                   ))
physical_complexes_tbl <-physical_complexes_tbl %>%
  mutate(in_deletion_library=case_when(
    in_deletion_library=="#N/A"~as.character(NA),
    TRUE~in_deletion_library))

physical_complexes_tbl %>% 
  select(in_deletion_library) %>% 
  distinct()


heterochromatin_screens_tbl<-read_csv("data/screens_used_for_correlation_and_growth_plots_SAGA_Set1_Mst2.csv",
                                      col_types = 
                                        cols(
                                          .default = col_double(),
                                          systematic_ID = col_character(),
                                          gene = col_character()
                                        ))
colnames(heterochromatin_screens_tbl)

# update gene names and add sysID ####

heterochromatin_screens_tbl %>% 
  filter(grepl("\\*", gene)) %>% 
  pull(gene)

heterochromatin_screens_tbl <- heterochromatin_screens_tbl %>% 
  mutate(gene_with_star=case_when(grepl("\\*", gene)~"star",
                                  TRUE~"non_star"))


heterochromatin_screens_tbl$gene <- sub("[\\*-]$", "", heterochromatin_screens_tbl$gene)
heterochromatin_screens_tbl$systematic_ID <- sub("[\\*-]$", "", heterochromatin_screens_tbl$systematic_ID)


heterochromatin_screens_tbl_2 <- left_join(heterochromatin_screens_tbl %>% select(-gene), tbl_gene_IDs_names %>% select(-synonyms) %>% rename(systematic_ID=gene_systematic_id)) %>% 
  rename(gene=gene_name)

# put stars back

heterochromatin_screens_tbl_2 <- heterochromatin_screens_tbl_2 %>% 
  mutate(gene=case_when(gene_with_star=="star"~paste0(gene, "*"),
                        TRUE~gene)) %>% 
  mutate(systematic_ID=case_when(gene_with_star=="star"~paste0(systematic_ID, "*"),
                                 TRUE~systematic_ID)) %>% 
  select(-gene_with_star)

colnames(heterochromatin_screens_tbl_2)

heterochromatin_screens_tbl_2 <- heterochromatin_screens_tbl_2[,c(106,1,2:105)]

heterochromatin_screens_tbl_2 <- heterochromatin_screens_tbl_2 %>% 
  mutate(gene=case_when(is.na(gene)~systematic_ID,
                        TRUE~gene))
heterochromatin_screens_tbl_2 %>% 
  filter(is.na(systematic_ID))

heterochromatin_screens_tbl_2 %>% 
  filter(is.na(gene))




